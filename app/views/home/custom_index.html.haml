        %li
          %img{:alt => "twitter", :src => "img/twitter.png"}/
        %li
          %img{:alt => "bing", :src => "img/bing.png"}/
    .footer
      .container
        .row
          .col-md-4
            %h4 Contact us
            .number 1-800-611-0821
          .col-md-2
            %h4 Company
            %ul.footerlinks
              %li
                %a{:href => "#"} About Us
              %li
                %a{:href => "#"} Contact Us
              %li
                %a{:href => "#"} Terms and Privacy
          .col-md-2
            %h4 Discover
            %ul.footerlinks
              %li
                %a{:href => "#"} Find a therapist
              %li
                %a{:href => "#"} For Therapists
              %li
                %a{:href => "#"} Sign up
              %li
                %a{:href => "#"} Sitemap
          .col-md-4
            %h4 Join us on
            %ul.nav
              %li.tw
                %a{:href => "#"}
                  %i.icon-twitter
              %li.fb
                %a{:href => "#"}
                  %i.icon-facebook
              %li.in
                %a{:href => "#"}
                  %i.icon-instagram
              %li.rs
                %a{:href => "#"}
                  %i.icon-rss
