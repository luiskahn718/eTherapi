    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"}
    %script{:src => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
    %script{:src => "js/classie.js"}
    %script{:src => "js/AniHeader.min.js"}
    %script{:src => "js/jquery.parallax-1.1.3.js"}
    %script{:src => "js/jquery.localscroll-1.2.7-min.js"}
    %script{:src => "js/jquery.scrollTo-1.4.2-min.js"}
    :javascript
      $(document).ready(function(){
        $('#nav').localScroll(600);
        $('#banner').parallax("50%", .5);
        $('.testimonial-wrapper').parallax("50%", .2);
        $('.shot-wrapper').parallax("50%", .3);
      })