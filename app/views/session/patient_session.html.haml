/ %h1 Patient Waiting Room
/ %div{:class => "session session-patient"}
/   %br
/   %a{:href => "" + @vseelink}
/     Join Video Session
/   
.video-session
  .row
    .aside-content.col-md-4
      .widget.user-info
        .widget-advanced
          .widget-header.name-content.text-center
            %h3
              %a{href:"javascript:void(0)", class:"user-name"} #{@gon_appointment["therapist"].first_name} #{@gon_appointment["therapist"].last_name}
          .widget-main
            .widget-image-container
              %a{href:"javascript:void(0)"} 
                - if @gon_appointment["therapist"].picture_filelink?
                  %img{src:"#{@gon_appointment["therapist"].picture_filelink}?#{Time.now.to_i}", alt:"user avatar", id:"user-avatar", class:"img-circle widget-icon"}/
                - else
                  - if @gon_appointment["therapist"].gender == 'M'
                    %img{src:"/images/user-avatar/Avatar-Male65x65.png", alt:"Male avatar", id:"user-avatar", class:"img-circle widget-icon"}/
                  - else
                    %img{src:"/images/user-avatar/Avatar-Female65x65.png", alt:"Female avatar", id:"user-avatar", class:"img-circle widget-icon"}/
            .info-detail
              %span
                %i.icon-clock2.integr-icon
                %span.info-title Current Time:
                %span#current-time
            .info-detail
              %span
                %i.icon-play-circle.integr-icon  
                %span.info-title Appointment Start Time: 
                %span#start-time
            .info-detail
              %span
                %i.icon-alarm3.integr-icon  
                %span.info-title Appointment End Time:
                %span#end-time 