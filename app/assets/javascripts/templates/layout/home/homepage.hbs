
<div id="banner">
  <div class="container">
    <h1>Need to talk?</h1>
    <h2>Talk to your therapist using online video.</h2>
    <form class="row">
      <div class="col-md-2 col-sm-2 col-md-offset-1 col-sm-offset-1">
        <select data-placeholder="Specialty" class="form-control select-chosen search-therapist-input" id="speciality-txt">
          <option value=""></option>
          <option value="">All Specialties</option>
          {{#each speciality_cdes}}
          <option value="{{speciality_id}}">{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-md-2 col-sm-2">
        <select data-placeholder="Provider Type" class="form-control select-chosen search-therapist-input" id="provider-txt">
          <option value=""></option>
          <option>All Providers</option>
          {{#each license_type_cdes}}
          <option value="{{abbreviation_id}}">{{name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-md-2 col-sm-2">
        <select data-placeholder="Payment Type" class="form-control select-chosen search-therapist-input" id="payment-txt">
          <option value=""></option>
          <option value="">All Payment Types</option>
          {{#each insurance_companies}}
          <option value="{{id}}">{{payers_name}}</option>
          {{/each}}
          <option value="">Out-of-pocket</option>
        </select>
      </div>
      <div class="col-md-2 col-sm-2">
        <input type="text" placeholder="Zip code/State" class="form-control" id="state-txt">
      </div>
      <div class="col-md-2 col-sm-2">
        <input type="text" placeholder="Find by Name" class="form-control search-therapist-input" id="name-txt"/>
      </div>
      <div class="col-md-4 col-sm-4 col-md-offset-7 col-sm-offset-7 ">
       <a href="/therapist/searchresult?speciality=&therapist_type=&payment_type=&state=&zipcode=&name=&page=1" class="btn btn-primary btn-block btn-lg" id="goto-search-btn">Find a Therapist</a>
      </div>
    </form>
  </div>
</div>
