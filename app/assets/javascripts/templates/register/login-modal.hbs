<div tabindex="-1" role="dialog" aria-hidden="false" class="login-register modal" id="login-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h1>
          Log In
        </h1>
      </div>
      <div class="modal-body">
        <!--Login Form-->
        <form class="form-horizontal form-bordered form-control-borderless">
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="gi gi-envelope">
                  </i>
                </span>
                <input name="login-email" placeholder="Email" type="text" class="form-control input-lg" id="email_login">
              </div>
              <p class="help-block error-message" id="msg-error-email"></p>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group error-from-server">
                <span class="input-group-addon">
                  <i class="gi gi-asterisk">
                  </i>
                </span>
                <input name="login-password" placeholder="Password" type="password" class="form-control input-lg" id="password_login">
              </div>
              <p class="help-block error-message" id="msg-error-password"></p>
            </div>
          </div>
          <div class="form-group form-actions">
            <div class="col-xs-4">
              <label data-toggle="tooltip" title="" class="switch switch-primary" data-original-title="Remember Me">
                <input class="remember-me" name="login-remember-me" type="checkbox">
                <span>
                </span>
              </label>
            </div>
            <div class="col-xs-8 text-right">
              <button type="button" class="btn btn-sm btn-info login-modal">
                Log In
              </button>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12 text-center">
              <a href="#reset-password-modal" data-toggle="modal" data-target="#reset-password-modal" class="reset-password-btn">
                Forgot password? 
              </a>
              -  
              <span class="notice">
                Don't have an account?
              </span>
              <a href="#signup-modal" class="sign-up">
                Sign Up
              </a>
            </div>
          </div>
        </form>
        <!--END Login Form-->
      </div>
    </div>
  </div>
</div>