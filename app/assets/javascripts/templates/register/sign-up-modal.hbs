<div tabindex="-1" role="dialog" aria-hidden="false" class="login-register modal" id="signup-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h1>
          Sign Up
        </h1>
      </div>
      <div class="modal-body">
        <!--Sign up Form-->
        <form class="form-horizontal form-bordered form-control-borderless">
          <div class="form-group user-account-group">
            <div class="col-xs-6 user-account">
              <label class="radio-inline">
                <input type="radio" name="account-type" id="therapist-account" value="therapist">
                Sign up as a Therapist
              </label>
                <p class="help-block error-message" id="account-type-therapist"></p>
            </div>
            <div class="col-xs-6 user-account">
              <label class="radio-inline">
                <input type="radio" name="account-type" id="patient-account" value="patient" id="account_type">
                Sign up as a Patient
                {{!-- <p class="help-block error-message" id="account-type-patient"></p> --}}
              </label>
            </div>
          </div>
          <div class="row no-gutter">
            <div class="form-inline col-xs-6">
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="gi gi-user">
                    </i>
                  </span>
                  <input name="register-firstname" placeholder="First Name" type="text" class="form-control input-lg" id="first_name">
                </div>
                <p class="help-block error-message" id="msg-firstname"></p>
              </div>
            </div>
            <div class="form-inline col-xs-6">
              <div class="form-group">
                <div class="input-group">
                  <input name="register-lastname" placeholder="Last Name" type="text" class="form-control input-lg" id="last_name">
                </div>
                <p class="help-block error-message" id="msg-lastname"></p>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12 email-message">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="gi gi-envelope">
                  </i>
                </span>
                <input name="register-email" placeholder="Email" type="text" class="form-control input-lg" id="email">
              </div>
              <p class="help-block error-message" id="msg-email"></p>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="gi gi-asterisk">
                  </i>
                </span>
                <input name="register-password" placeholder="Password" type="password" class="form-control input-lg" id="password">
              </div>
              <p class="help-block error-message"></p>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="gi gi-asterisk">
                  </i>
                </span>
                <input name="register-password-verify" placeholder="Verify Password" type="password" class="form-control input-lg" id="password_confirmation">
              </div>
              <p class="help-block error-message" id="msg-confirm"></p>
            </div>
          </div>
          <div class="form-group form-actions">
            <div class="col-xs-6">
              <a href="/site/terms" target="_blank" class="register-terms">
                Terms
              </a>
              <label data-toggle="tooltip" title="" class="switch switch-primary" data-original-title="Agree to the terms">
                <input class="agree" name="register-terms" type="checkbox">
                <span>
                </span>
              </label>
            </div>
            <div class="col-xs-6 text-right">
              <button type="button" class="btn btn-sm btn-info sign-up-btn">
                Sign Up
              </button>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12 text-center">
              <span class="notice">
                Have an account?
              </span>
              <a href="javascript:void(0)" class="login">
                Log in
              </a>
            </div>
          </div>
        </form>
        <!--END Sign up Form-->
      </div>
    </div>
  </div>
</div>